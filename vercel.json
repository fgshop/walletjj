{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "node -v && pnpm -v && pnpm turbo run build --filter=@joju/api... --output-logs=full",
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/v1/(.*)", "destination": "/api" },
    { "source": "/docs", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
