{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm --filter @joju/types build && pnpm --filter @joju/utils build && pnpm --filter @joju/api build",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["node_modules/.prisma/**"]
      }
    }
  ],
  "routes": [
    { "src": "/v1/(.*)", "dest": "/api" },
    { "src": "/docs", "dest": "/api" },
    { "src": "/(.*)", "dest": "/api" }
  ]
}
