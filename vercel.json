{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "buildCommand": "pnpm --filter @joju/types build && pnpm --filter @joju/utils build && pnpm --filter @joju/api build",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "includeFiles": "apps/api/node_modules/.prisma/**"
    }
  },
  "rewrites": [
    { "source": "/v1/(.*)", "destination": "/api" },
    { "source": "/docs", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
