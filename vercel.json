{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "buildCommand": "bash apps/api/scripts/vercel-build.sh",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "includeFiles": ["apps/api/node_modules/.prisma/**", "packages/types/dist/**", "packages/utils/dist/**"]
    }
  },
  "rewrites": [
    { "source": "/v1/(.*)", "destination": "/api" },
    { "source": "/docs", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
